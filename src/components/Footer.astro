---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' },
  { icon: 'fab fa-tiktok', url: '#' }
];
---

<footer class="bg-gradient-to-r from-cyan-500 to-orange-500 text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-bold">&copy; {currentYear} Rim Reels. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="hover:text-white transition-colors duration-300 transform hover:scale-110">
          <i class={link.icon + " text-2xl"}></i>
        </a>
      ))}
    </div>
    <div class="mt-6 flex justify-center">
      <div class="w-16 h-1 bg-white rounded-full"></div>
    </div>
  </div>
</footer>