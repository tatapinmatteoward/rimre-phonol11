---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Events";
const pageDescription = "Step into the timeless rhythm of the court with Court Chronicles' curated events. From legendary tournaments to heartfelt community gatherings, relive and anticipate the soul-stirring moments that define basketball's enduring legacy.";

const upcomingEvents = [
  {
    id: 1,
    title: "Hoops Heritage Classic",
    date: "October 15-17, 2023",
    location: "Vintage Gymnasium, Downtown",
    description: "Relive the glory days with this throwback tournament featuring teams in retro uniforms. Expect fast breaks, buzzer-beaters, and post-game yarns from basketball elders.",
    tickets: "$20",
    highlights: ["Vintage rules", "Alumni matchups", "Retro uniforms"],
    image: "hoops-heritage"
  },
  {
    id: 2,
    title: "Community Slam Fest",
    date: "November 5, 2023",
    location: "Central Park Courts",
    description: "A celebration of local basketball talent with free clinics, mini-tournaments, and community storytelling sessions about the game's impact.",
    tickets: "Free admission",
    highlights: ["Kids clinics", "Local legends", "Storytelling circle"],
    image: "slam-fest"
  },
  {
    id: 3,
    title: "Championship Legacy Gala",
    date: "December 12, 2023",
    location: "Grand Ballroom, Heritage Hotel",
    description: "An elegant evening honoring basketball legends with speeches, awards, and a silent auction featuring signed memorabilia.",
    tickets: "$75",
    highlights: ["Award ceremony", "Memorabilia auction", "Legendary speakers"],
    image: "legacy-gala"
  }
];

const eventCategories = [
  {
    name: "Tournaments",
    icon: "fas fa-trophy",
    description: "Competitive events that celebrate basketball tradition"
  },
  {
    name: "Storytelling",
    icon: "fas fa-book-open",
    description: "Community gatherings sharing basketball memories and experiences"
  },
  {
    name: "Community",
    icon: "fas fa-users",
    description: "Free events connecting fans and players with local organizations"
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle} | Court Chronicles</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-amber-50 font-serif">
  <Layout title={pageTitle} description={pageDescription}>
    <!-- Hero Section -->
    <header class="relative py-20 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900 to-amber-900 opacity-90"></div>
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
      <div class="container mx-auto px-4 relative z-10 text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-amber-200 mb-6 tracking-wide">EVENTS</h1>
        <p class="text-xl md:text-2xl text-amber-100 max-w-3xl mx-auto italic font-light">
          Step into the timeless rhythm of the court with Court Chronicles' curated events.
        </p>
        <div class="mt-10">
          <div class="inline-block bg-amber-700 text-amber-100 px-8 py-3 rounded-full shadow-lg transform hover:scale-105 transition duration-300">
            <span class="fas fa-calendar-alt mr-2"></span>
            <span>Upcoming Events Calendar</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Welcome Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="flex items-center mb-10">
          <div class="w-24 h-1 bg-amber-500 mr-4"></div>
          <h2 class="text-3xl font-bold text-slate-900">Welcome to the Heartbeat of the Hardwood</h2>
          <div class="w-24 h-1 bg-amber-500 ml-4"></div>
        </div>
        <div class="prose prose-lg max-w-none">
          <p class="text-slate-700 text-lg leading-relaxed mb-6">
            In the spirit of vintage tales spun under arena lights, Court Chronicles invites you to our calendar of events—where every bounce, every cheer, and every triumph echoes the golden age of basketball. Whether you're a seasoned fan or a newcomer to the court's embrace, these gatherings promise stories that linger long after the final buzzer.
          </p>
          <p class="text-slate-700 text-lg leading-relaxed">
            Join us as we honor tradition while creating new memories that will be passed down through generations. From legendary tournaments to heartfelt community gatherings, each event is crafted with care to showcase the soul-stirring moments that define basketball's enduring legacy.
          </p>
        </div>
      </div>
    </section>

    <!-- Event Categories -->
    <section class="py-16 bg-amber-100">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-slate-900 mb-4">Event Categories</h2>
          <p class="text-amber-800 max-w-2xl mx-auto">Discover different ways to engage with basketball heritage and community</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {eventCategories.map((category) => (
            <div class="bg-white rounded-xl shadow-lg p-8 text-center transform hover:scale-105 transition duration-300">
              <div class="text-5xl text-amber-600 mb-6">
                <i class={category.icon}></i>
              </div>
              <h3 class="text-2xl font-bold text-slate-900 mb-4">{category.name}</h3>
              <p class="text-slate-600">{category.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Events -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <div class="inline-block w-24 h-1 bg-amber-500 mb-4"></div>
          <h2 class="text-4xl font-bold text-slate-900 mb-4">Featured Events</h2>
          <p class="text-amber-800 max-w-2xl mx-auto">Join us for our most anticipated gatherings</p>
        </div>
        
        <div class="space-y-16">
          {upcomingEvents.map((event) => (
            <div class="group">
              <div class="flex flex-col lg:flex-row gap-10 items-center">
                <div class="lg:w-1/3">
                  <div class="relative rounded-xl overflow-hidden shadow-xl transform group-hover:scale-105 transition duration-500">
                    <div class="bg-gradient-to-br from-slate-900 to-amber-800 h-64 w-full flex items-center justify-center">
                      <div class="text-amber-200 text-center p-4">
                        <div class="text-6xl mb-4">
                          <i class="fas fa-basketball-ball"></i>
                        </div>
                        <div class="text-2xl font-bold">{event.title}</div>
                      </div>
                    </div>
                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-6">
                      <div class="text-amber-200 text-sm">{event.date}</div>
                    </div>
                  </div>
                </div>
                
                <div class="lg:w-2/3">
                  <div class="border-l-4 border-amber-500 pl-6 py-2">
                    <h3 class="text-3xl font-bold text-slate-900 mb-3">{event.title}</h3>
                  </div>
                  
                  <div class="flex flex-wrap gap-4 mt-4 mb-6">
                    <div class="flex items-center text-slate-700">
                      <i class="fas fa-calendar-alt text-amber-600 mr-2"></i>
                      <span>{event.date}</span>
                    </div>
                    <div class="flex items-center text-slate-700">
                      <i class="fas fa-map-marker-alt text-amber-600 mr-2"></i>
                      <span>{event.location}</span>
                    </div>
                    <div class="flex items-center text-slate-700">
                      <i class="fas fa-ticket-alt text-amber-600 mr-2"></i>
                      <span>{event.tickets}</span>
                    </div>
                  </div>
                  
                  <p class="text-slate-700 mb-6 text-lg leading-relaxed">
                    {event.description}
                  </p>
                  
                  <div class="mb-6">
                    <h4 class="text-xl font-semibold text-slate-900 mb-3 flex items-center">
                      <i class="fas fa-star text-amber-500 mr-2"></i>
                      Event Highlights
                    </h4>
                    <ul class="grid grid-cols-1 sm:grid-cols-3 gap-2">
                      {event.highlights.map((highlight, index) => (
                        <li key={index} class="flex items-start">
                          <i class="fas fa-check-circle text-amber-500 mt-1 mr-2 flex-shrink-0"></i>
                          <span class="text-slate-700">{highlight}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="flex flex-wrap gap-4">
                    <button class="px-6 py-3 bg-amber-600 text-white rounded-full font-medium hover:bg-amber-700 transition duration-300 shadow-md">
                      <i class="fas fa-ticket-alt mr-2"></i> Get Tickets
                    </button>
                    <button class="px-6 py-3 border-2 border-amber-600 text-amber-600 rounded-full font-medium hover:bg-amber-50 transition duration-300">
                      <i class="fas fa-info-circle mr-2"></i> More Details
                    </button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-gradient-to-r from-slate-900 to-amber-900 text-amber-100">
      <div class="container mx-auto px-4 text-center">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-bold mb-6">Don't Miss Out on the Court's Greatest Stories</h2>
          <p class="text-xl mb-10 text-amber-200">Join our mailing list and be the first to know when tickets go on sale for our signature events.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <input type="email" placeholder="Your email address" class="px-6 py-4 rounded-full flex-grow max-w-md text-slate-900 focus:outline-none focus:ring-2 focus:ring-amber-500">
            <button class="px-8 py-4 bg-amber-500 text-slate-900 font-bold rounded-full hover:bg-amber-400 transition duration-300 shadow-lg">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-slate-900 text-amber-100 py-12">
      <div class="container mx-auto px-4 text-center">
        <div class="flex justify-center mb-6">
          <div class="text-5xl text-amber-500">
            <i class="fas fa-basketball-ball"></i>
          </div>
        </div>
        <p class="text-2xl font-bold mb-4">Court Chronicles</p>
        <p class="text-amber-300 mb-6">Chronicling the Heart and Soul of Basketball</p>
        <div class="flex justify-center space-x-6 mb-8">
          <a href="#" class="text-amber-300 hover:text-amber-500 transition"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="text-amber-300 hover:text-amber-500 transition"><i class="fab fa-twitter"></i></a>
          <a href="#" class="text-amber-300 hover:text-amber-500 transition"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-amber-300 hover:text-amber-500 transition"><i class="fab fa-youtube"></i></a>
        </div>
        <p class="text-slate-500 text-sm">© {new Date().getFullYear()} Court Chronicles. All rights reserved.</p>
      </div>
    </footer>
  </Layout>
</body>
</html>