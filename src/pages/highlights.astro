---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Highlights | Rim Reels";
const pageDescription = "Dive into the most electrifying basketball highlights on Rim Reels. From gravity-defying dunks to game-changing insights, relive the epic moments that define the sport with our vibrant timeline of hoops glory.";

const topDunks = [
  {
    id: 1,
    player: "Vince Carter",
    move: "2000 Dunk Contest Masterpiece",
    description: "The kid from Toronto turned the NBA into his playground with a between-the-legs windmill that defies physics."
  },
  {
    id: 2,
    player: "Ja Morant",
    move: "Posterizing Leaps",
    description: "The Grizzlies star's explosive hops make defenders look like statues—pure athletic poetry."
  },
  {
    id: 3,
    player: "Zach LaVine",
    move: "Windmill Slam",
    description: "The dunker's signature windmill has become synonymous with effortless grace and power."
  },
  {
    id: 4,
    player: "Michael Jordan",
    move: "1988 Slam Dunk Contest",
    description: "The legendary flyer showed why he was known as 'His Airness' with an awe-inspiring display of athleticism."
  }
];

const timelineEvents = [
  {
    year: "1990",
    event: "Vince Carter's Debut in Toronto",
    description: "The 'World Wide Web' was born as Carter lit up the court with his incredible athleticism."
  },
  {
    year: "2018",
    event: "Ja Morant's NBA Debut",
    description: "A new era began as Morant brought energy and explosiveness to the league."
  },
  {
    year: "2022",
    event: "Zach LaVine Makes History",
    description: "LaVine became the first player to dunk in the NBA All-Star Game since Michael Jordan."
  },
  {
    year: "2023",
    event: "Carter's Legacy Celebrated",
    description: "The Toronto Raptors honored Carter's contributions to the franchise with a special tribute."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
  {'
      @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }
      
      @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
      }
      
      .pulse-animation {
        animation: pulse 2s infinite;
      }
      
      .float-animation {
        animation: float 3s ease-in-out infinite;
      }
      
      .gradient-border {
        position: relative;
        border: 2px solid transparent;
        border-radius: 12px;
      }
      
      .gradient-border::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: linear-gradient(45deg, #0ea5e9, #f97316, #0ea5e9);
        border-radius: 14px;
        z-index: -1;
        animation: gradient 3s linear infinite;
        background-size: 400% 400%;
      }
      
      @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
      
      .highlight-card {
        transition: all 0.3s ease;
        transform-style: preserve-3d;
      }
      
      .highlight-card:hover {
        transform: translateY(-5px) rotateY(5deg);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }
    '}
</style>

  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-blue-500 via-cyan-500 to-orange-500 py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-64 h-64 bg-white rounded-full mix-blend-multiply filter blur-xl animate-float"></div>
      <div class="absolute top-40 right-20 w-72 h-72 bg-white rounded-full mix-blend-multiply filter blur-xl animate-float animation-delay-2000"></div>
      <div class="absolute bottom-20 left-1/4 w-60 h-60 bg-white rounded-full mix-blend-multiply filter blur-xl animate-float animation-delay-4000"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 drop-shadow-lg">
          <span class="block">Rim Reels</span>
          <span class="block text-2xl md:text-4xl mt-4 text-yellow-200">Dunking into Epic Moments</span>
        </h1>
        <p class="text-xl md:text-2xl text-white/90 font-light max-w-2xl mx-auto">
          Relive the most electrifying basketball moments with our vibrant timeline of hoops glory
        </p>
        
        <div class="mt-10 flex justify-center">
          <div class="bg-white/20 backdrop-blur-sm rounded-full px-6 py-3 border border-white/30">
            <span class="text-white font-bold">Welcome to the Ultimate Basketball Experience</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 mb-10 md:mb-0">
          <div class="bg-white rounded-2xl shadow-xl p-8 max-w-md mx-auto">
            <h2 class="text-3xl font-bold text-blue-600 mb-4">Welcome to Rim Reels</h2>
            <p class="text-gray-700 mb-4">
              We celebrate basketball's greatest thrills with our signature tagline: 
              <span class="font-bold text-orange-500"> "Dunking into Epic Basketball Moments and Insights"</span>
            </p>
            <p class="text-gray-700">
              Explore our vibrant, playful timeline of unforgettable plays, legendary players, and sharp analysis that keeps you on the edge of your seat.
            </p>
          </div>
        </div>
        
        <div class="md:w-1/2 flex justify-center">
          <div class="relative">
            <div class="w-64 h-64 bg-gradient-to-br from-blue-400 to-orange-400 rounded-full flex items-center justify-center pulse-animation">
              <i class="fas fa-basketball-ball text-white text-6xl"></i>
            </div>
            
            <div class="absolute -top-4 -right-4 bg-orange-500 text-white rounded-full w-16 h-16 flex items-center justify-center">
              <i class="fas fa-star text-xl"></i>
            </div>
            
            <div class="absolute -bottom-4 -left-4 bg-cyan-500 text-white rounded-full w-16 h-16 flex items-center justify-center">
              <i class="fas fa-fire text-xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Top Dunks Section -->
  <section class="py-16 bg-gradient-to-b from-white to-blue-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">Top Dunks That Shook the Court</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">These slams aren't just plays—they're seismic events!</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {topDunks.map((dunk) => (
          <div class="highlight-card gradient-border">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="h-48 bg-gradient-to-r from-blue-400 to-cyan-500 flex items-center justify-center">
                <i class="fas fa-dumbbell text-white text-6xl"></i>
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800">{dunk.player}</h3>
                <h4 class="text-lg font-semibold text-orange-600 mb-3">{dunk.move}</h4>
                <p class="text-gray-600">{dunk.description}</p>
                
                <div class="mt-4 flex justify-between items-center">
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                    Epic Moment
                  </span>
                  <button class="text-orange-500 hover:text-orange-700 font-medium">
                    Watch Replay <i class="fas fa-play-circle ml-2"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">Basketball Evolution Timeline</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">From legendary moments to modern milestones</p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-blue-500 to-orange-500"></div>
        
        <!-- Timeline events -->
        <div class="space-y-12">
          {timelineEvents.map((event, index) => (
            <div class={`relative flex ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'}`}>
              <div class="w-1/2 px-8 py-4">
                <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-orange-500">
                  <span class="inline-block bg-orange-100 text-orange-800 text-xs px-3 py-1 rounded-full mb-3">
                    {event.year}
                  </span>
                  <h3 class="text-xl font-bold text-blue-700 mb-2">{event.event}</h3>
                  <p class="text-gray-600">{event.description}</p>
                </div>
              </div>
              
              <div class="absolute left-1/2 transform -translate-x-1/2 w-6 h-6 rounded-full bg-blue-500 border-4 border-white shadow-lg"></div>
              
              <div class="w-1/2"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-cyan-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready for More Basketball Magic?</h2>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto mb-10">
        Join thousands of fans who never miss a single epic moment. Subscribe now for exclusive highlights!
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300 transform hover:scale-105">
          <i class="fas fa-play-circle mr-2"></i> Watch Latest Highlights
        </button>
        <button class="bg-white/20 hover:bg-white/30 text-white font-bold py-3 px-8 rounded-full text-lg backdrop-blur-sm transition duration-300">
          <i class="fas fa-star mr-2"></i> Become a Member
        </button>
      </div>
    </div>
  </section>

  <!-- Footer Highlights -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-4">Rim Reels - Your Home for Basketball Excellence</h3>
        <p class="text-gray-400 max-w-2xl mx-auto mb-8">
          Follow us for daily highlights, behind-the-scenes content, and exclusive interviews with basketball legends
        </p>
        
        <div class="flex justify-center space-x-6 mb-8">
          <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-facebook-f text-2xl"></i></a>
          <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-twitter text-2xl"></i></a>
          <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-instagram text-2xl"></i></a>
          <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-youtube text-2xl"></i></a>
        </div>
        
        <div class="border-t border-gray-800 pt-8">
          <p class="text-gray-500">© 2023 Rim Reels. All rights reserved. Dunking into Epic Moments and Insights.</p>
        </div>
      </div>
    </div>
  </footer>
</Layout>