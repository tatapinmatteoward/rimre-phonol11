---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Rim Reels Stats: Slam-Dunking the Numbers";
const pageDescription = "Dive into the thrilling world of basketball statistics on Rim Reels. From jaw-dropping scoring records to assist wizards and rebound kings, explore key insights that fuel epic moments on the court. Track player and team stats in our vibrant timeline of hoop history.";

const topScorers = [
  { name: "Michael Jordan", points: "30.1 PPG", desc: "The ultimate scoring machine!" },
  { name: "LeBron James", points: "38,000+ career points", desc: "King James reigns supreme." },
  { name: "Kobe Bryant", points: "81 points in a game", desc: "Pure Mamba Mentality magic." }
];

const statFeatures = [
  { 
    icon: "fas fa-bullseye", 
    title: "All-Time Leaders", 
    desc: "Discover the greatest scorers in basketball history." 
  },
  { 
    icon: "fas fa-users", 
    title: "Team Powerhouses", 
    desc: "Explore championship-winning teams and their secrets." 
  },
  { 
    icon: "fas fa-trophy", 
    title: "Playoff Legends", 
    desc: "Uncover clutch performances that changed seasons." 
  },
  { 
    icon: "fas fa-heartbeat", 
    title: "Player Impact", 
    desc: "See how individual performances shape games." 
  }
];

const timelineEvents = [
  { year: "1969", event: "First NBA Championship", color: "bg-blue-500" },
  { year: "1984", event: "Magic vs. Bird Era Begins", color: "bg-purple-500" },
  { year: "1996", event: "Chicago Bulls Dynasty", color: "bg-red-500" },
  { year: "2008", event: "LeBron's First Championship", color: "bg-orange-500" },
  { year: "2020", event: "LeBron Wins 4th Ring", color: "bg-green-500" },
  { year: "2023", event: "NBA Finals History", color: "bg-yellow-500" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
  {'
      .gradient-text {
        background: linear-gradient(90deg, #0ea5e9, #f97316);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .timeline-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: #0ea5e9;
        box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.3);
      }
      
      .timeline-item:nth-child(even)::before {
        left: auto;
        right: 0;
      }
      
      .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      }
      
      .stat-card {
        transition: all 0.3s ease;
      }
      
      .stat-card:hover {
        transform: scale(1.03);
      }
    '}
</style>

  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-primary to-accent py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col items-center text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 gradient-text">
          Rim Reels Stats: Slam-Dunking the Numbers
        </h1>
        <p class="text-xl md:text-2xl text-white max-w-3xl mb-10">
          Dive into the thrilling world of basketball statistics. From jaw-dropping scoring records to assist wizards and rebound kings, explore key insights that fuel epic moments on the court.
        </p>
        <div class="bg-white/20 backdrop-blur-sm rounded-full px-6 py-3 text-white font-bold text-lg border-2 border-white/30">
          <i class="fas fa-chart-line mr-2"></i> Track Player & Team Stats
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            Welcome to the Stats Slam Zone! <i class="fas fa-basketball-ball text-primary ml-2"></i>
          </h2>
          <div class="w-24 h-1 bg-accent mx-auto mb-6"></div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-xl p-6 md:p-10 border-l-4 border-primary">
          <p class="text-gray-700 text-lg leading-relaxed mb-4">
            At <span class="font-bold text-primary">Rim Reels</span>, we're all about turning numbers into excitement. Whether you're a die-hard fan analyzing the latest NBA showdown or reminiscing about legendary plays, our stats page is your go-to for <span class="font-bold text-accent">playful insights</span> into the game's heartbeat. Get ready to geek out over points, rebounds, and those game-changing steals!
          </p>
          
          <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center p-4 bg-blue-50 rounded-lg">
              <i class="fas fa-tachometer-alt text-3xl text-primary mb-3"></i>
              <h3 class="font-bold text-gray-800 mb-1">Real-Time Stats</h3>
              <p class="text-sm text-gray-600">Live tracking during games</p>
            </div>
            <div class="text-center p-4 bg-orange-50 rounded-lg">
              <i class="fas fa-history text-3xl text-accent mb-3"></i>
              <h3 class="font-bold text-gray-800 mb-1">Historical Data</h3>
              <p class="text-sm text-gray-600">All-time records and trends</p>
            </div>
            <div class="text-center p-4 bg-green-50 rounded-lg">
              <i class="fas fa-chart-bar text-3xl text-green-500 mb-3"></i>
              <h3 class="font-bold text-gray-800 mb-1">Performance Insights</h3>
              <p class="text-sm text-gray-600">Deep analysis of player impact</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Top Scorers Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-14">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Top Scorers: <span class="gradient-text">Lighting Up the Scoreboard</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          These hoop heroes have been raining buckets like pros. Check out the all-time greats:
        </p>
        <div class="w-24 h-1 bg-accent mx-auto mt-6"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {topScorers.map((scorer, index) => (
          <div 
            class="stat-card bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-lg p-6 border border-gray-100 card-hover"
            style="border-top: 4px solid #0ea5e9;"
          >
            <div class="flex items-center mb-4">
              <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16" />
              <div class="ml-4">
                <h3 class="text-xl font-bold text-gray-800">{scorer.name}</h3>
                <p class="text-primary font-semibold">{scorer.points}</p>
              </div>
            </div>
            <p class="text-gray-600 italic">"{scorer.desc}"</p>
            <div class="mt-4 text-right">
              <span class="inline-block bg-gray-100 text-gray-700 rounded-full px-3 py-1 text-sm">
                #{index + 1}
              </span>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-12 bg-gradient-to-r from-primary to-accent rounded-2xl p-8 text-center">
        <h3 class="text-2xl font-bold text-white mb-2">Fun Fact:</h3>
        <p class="text-white max-w-3xl mx-auto">
          The highest-scoring game ever? <span class="font-bold">Wilt Chamberlain</span> once scored 100 points in a single game - a record that still stands today!
        </p>
      </div>
    </div>
  </section>

  <!-- Stat Features Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-14">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Explore the Stats <span class="gradient-text">That Matter Most</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          From individual brilliance to team dominance, our comprehensive stats capture the heart of basketball
        </p>
        <div class="w-24 h-1 bg-accent mx-auto mt-6"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {statFeatures.map((feature) => (
          <div class="bg-white rounded-2xl shadow-lg p-6 text-center hover:shadow-xl transition-shadow duration-300">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 text-primary mb-4">
              <i class={feature.icon}></i>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-14">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Epic Basketball <span class="gradient-text">Moments Through Time</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          A vibrant timeline of pivotal moments that shaped basketball history
        </p>
        <div class="w-24 h-1 bg-accent mx-auto mt-6"></div>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="relative">
          {/* Timeline line */}
          <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary to-accent transform -translate-x-1/2"></div>
          
          <div class="space-y-12">
            {timelineEvents.map((event, index) => (
              <div 
                class={`relative timeline-item pl-12 pr-4 ${index % 2 === 0 ? 'md:pl-20' : 'md:pr-20 md:pl-0'}`}
              >
                <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100">
                  <div class={`w-8 h-8 rounded-full ${event.color} absolute flex items-center justify-center`}>
                    <span class="text-white font-bold">{event.year}</span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-800 mb-2">{event.event}</h3>
                  <p class="text-gray-600">
                    {index === 0 && "The beginning of NBA glory"}
                    {index === 1 && "The rivalry that redefined basketball"}
                    {index === 2 && "Chicago's golden era"}
                    {index === 3 && "A king's rise to greatness"}
                    {index === 4 && "Another championship milestone"}
                    {index === 5 && "Modern basketball history"}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-primary to-accent">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Level Up Your Stats Knowledge?
        </h2>
        <p class="text-xl text-white max-w-2xl mx-auto mb-10">
          Join thousands of basketball enthusiasts who never miss a beat with our comprehensive analytics.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/register" class="bg-white text-primary font-bold py-3 px-8 rounded-full hover:bg-gray-100 transition duration-300 shadow-lg">
            Start Exploring Stats
          </a>
          <a href="/games" class="bg-transparent border-2 border-white text-white font-bold py-3 px-8 rounded-full hover:bg-white/10 transition duration-300">
            Watch Live Games
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>