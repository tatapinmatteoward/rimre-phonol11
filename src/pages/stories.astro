---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Stories";
const pageDescription = "Dive into captivating tales from the hardwood, where the drama of basketball unfolds like chapters in an epic saga. From legendary showdowns to untold underdog victories, our stories capture the timeless spirit of the game.";

const legendaryShowdowns = [
  {
    title: "The Miracle on Ice of Basketball",
    description: "How the 1980 U.S. Olympic team defied odds against a Soviet juggernaut, blending grit and genius."
  },
  {
    title: "Jordan vs. Bird: The Finals Fury",
    description: "A deep dive into the 1990s rivalry that elevated the NBA to global legend status."
  }
];

const underdogTales = [
  {
    title: "From Streetball to Stardom",
    description: "The journey of a Harlem kid who turned playground dreams into professional stardom."
  },
  {
    title: "The Coach Who Never Gave Up",
    description: "An underdog team's rise led by a coach who believed in his players' potential."
  },
  {
    title: "The Forgotten Champion",
    description: "One player's quiet determination that brought glory to a small-town team."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
  {'
      .vintage-divider {
        height: 4px;
        background: linear-gradient(to right, #1e293b, #fbbf24, #1e293b);
        margin: 2rem 0;
        border-radius: 2px;
      }
      
      .story-card {
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      
      .story-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.15);
      }
      
      .accent-text {
        color: #fbbf24;
      }
      
      .vintage-header {
        font-family: 'Georgia', serif;
        letter-spacing: 2px;
        text-transform: uppercase;
        font-weight: 700;
      }
      
      .vintage-text {
        font-family: 'Times New Roman', serif;
        line-height: 1.8;
      }
      
      .ornament {
        color: #fbbf24;
        font-size: 1.5rem;
      }
    '}
</style>

  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-[#1e293b] to-[#0f172a] py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-24 h-24 border-2 border-[#fbbf24] rotate-45"></div>
      <div class="absolute bottom-10 right-10 w-32 h-32 border-2 border-[#fbbf24] -rotate-12"></div>
      <div class="absolute top-1/3 right-1/4 w-16 h-16 border border-[#fbbf24] rounded-full"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white vintage-header mb-6 tracking-wide">
          Stories
        </h1>
        <div class="vintage-divider mx-auto w-32"></div>
        <p class="text-xl text-gray-300 mt-8 vintage-text">
          Chronicling the Heart and Soul of Basketball
        </p>
      </div>
    </div>
  </div>

  <!-- Introduction Section -->
  <section class="py-16 bg-[#f8fafc]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-start mb-8">
          <span class="ornament mr-4">❧</span>
          <h2 class="text-3xl font-bold text-[#1e293b] vintage-header">
            Welcome to Court Chronicles
          </h2>
        </div>
        
        <div class="vintage-text text-gray-700 space-y-4">
          <p>
            <span class="accent-text">Welcome to the heart-pounding narratives of Court Chronicles</span>, where the bounce of the ball echoes through history. In the tradition of vintage magazines, we chronicle the soul-stirring moments that define basketball—triumphs, heartbreaks, and the unbreakable bonds forged on the court.
          </p>
          
          <p>
            Each story is a chapter in the epic saga of our beloved sport. From the thunderous roar of packed arenas to the quiet determination of players who never gave up, these tales remind us why we fall in love with basketball time and again.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Legendary Showdowns Section -->
  <section class="py-16 bg-[#1e293b] text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-start mb-12">
          <span class="ornament mr-4">❦</span>
          <h2 class="text-4xl font-bold vintage-header">
            Legendary Showdowns
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {legendaryShowdowns.map((showdown, index) => (
            <div class="story-card bg-[#f8fafc] p-8 rounded-lg text-[#1e293b]">
              <h3 class="text-2xl font-bold mb-4 vintage-header accent-text">
                {showdown.title}
              </h3>
              <p class="vintage-text">
                {showdown.description}
              </p>
              <div class="mt-6 flex justify-end">
                <div class="w-12 h-1 bg-[#fbbf24] rounded-full"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Underdog Tales Section -->
  <section class="py-16 bg-[#f8fafc]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-start mb-12">
          <span class="ornament mr-4">❧</span>
          <h2 class="text-4xl font-bold text-[#1e293b] vintage-header">
            Underdog Tales
          </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {underdogTales.map((talent, index) => (
            <div class="story-card bg-white p-6 rounded-lg border border-gray-200">
              <div class="text-[#fbbf24] text-2xl mb-4">
                <i class="fas fa-heart"></i>
              </div>
              <h3 class="text-xl font-bold mb-3 text-[#1e293b] vintage-header">
                {talent.title}
              </h3>
              <p class="vintage-text text-gray-700">
                {talent.description}
              </p>
              <div class="mt-6">
                <div class="w-full h-1 bg-gray-200 rounded-full overflow-hidden">
                  <div class="h-full bg-[#fbbf24] w-3/4"></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="py-20 bg-gradient-to-r from-[#1e293b] to-[#0f172a] text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <blockquote class="text-2xl italic vintage-text">
          "Basketball isn't just a game—it's a language of passion, respect, and unforgettable moments that live forever in the hearts of those who play and watch."
        </blockquote>
        <div class="mt-8">
          <div class="inline-block w-24 h-1 bg-[#fbbf24] rounded-full"></div>
        </div>
        <p class="mt-8 text-lg text-gray-300 vintage-header">
          - The Court Chronicles Team
        </p>
      </div>
    </div>
  </section>

  <!-- Footer CTA -->
  <section class="py-16 bg-[#1e293b] text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold vintage-header mb-6">
          Explore More Stories
        </h2>
        <p class="text-xl text-gray-300 vintage-text mb-8">
          Join us on a journey through time, where every game tells a story worth telling.
        </p>
        <div class="flex justify-center space-x-4">
          <button class="px-8 py-3 bg-[#fbbf24] text-[#1e293b] font-bold vintage-header hover:bg-[#f59e0b] transition duration-300 rounded-full">
            Read Next Story
          </button>
          <button class="px-8 py-3 border-2 border-[#fbbf24] text-[#fbbf24] font-bold vintage-header hover:bg-[#fbbf24] hover:text-[#1e293b] transition duration-300 rounded-full">
            Subscribe to Stories
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>